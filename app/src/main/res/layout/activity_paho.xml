<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shileiyu.mqttclient.ui.third.PahoActivity">

    <TextView
        android:id="@+id/act_paho_tv"
        style="@style/Com_Text_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/act_paho_host_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_paho_tv"/>

    <Button
        android:id="@+id/act_paho_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        app:layout_constraintTop_toBottomOf="@+id/act_paho_host_input"/>

    <EditText
        android:id="@+id/act_paho_host_input2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="输入"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_paho_connect"/>

    <Button
        android:id="@+id/act_paho_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish"
        app:layout_constraintTop_toBottomOf="@+id/act_paho_host_input2"
        tools:layout_editor_absoluteX="0dp"/>

    <EditText
        android:id="@+id/act_paho_host_input3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="输入topic"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_paho_publish"/>

    <Button
        android:id="@+id/act_paho_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        app:layout_constraintTop_toBottomOf="@+id/act_paho_host_input3"
        tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>
